{% extends 'main/admin.html.twig' %}
{% block title %}Supplier Manager
{% endblock %}

{% block body %}
	<div classname="page-heading pb-2 mt-4 mb-2 ">
		<h3>Manager</h3>
		<a href="{{path('supplier_create')}}">
			<button type="button" class="btn btn-outline-primary">Insert</button>
		</a>
	</div>
	<div class="page-content">
		<div class="btn-group" role="group" aria-label="Basic outlined example"></div>
		<div class="card">
			<div class="container mb-3">
				<div class="table-responsive text-nowrap">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody class="table-border-bottom-0">
							{% for s in sup %}
								<tr>
									<td>{{ s.id}}</td>
									<td>{{ s.name}}</td>
									<td>
										<a href="{{path('supplier_edit',{'id':s.id})}}"><i class="fas fa-edit"></i></a>
										<a href="{{path('supplier_delete',{'id':s.id})}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
