{% extends 'main/home.html.twig' %}

{% block title %}Hello OrderController!{% endblock %}

{% block body %}
                <table class="table table-striped table-borderless border-0 border-b-2 brc-default-l1">
                    <thead class="bg-none bgc-default-tp1">
                        <tr class="text-white">
                            <th>ID</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th width="140">Date Created</th>
                        </tr>
                    </thead>

                    <tbody class="text-95 text-secondary-d3">
                    {% for o in od %}
                        <tr>
                            <td>{{o.id}}</td>
                            <td>{{o.name}}</td>
                            <td>{{o.price}}</td>
                            <td class="text-95">{{o.quantity}}</td>
                            <td class="text-secondary-d2">{{o.date|date('d/m/y')}}</td>
                        </tr> 
                    {% endfor %}
                        
                    </tbody>
                </table>
{% endblock %}






