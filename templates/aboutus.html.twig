{% extends 'main/home.html.twig' %}

{% block title %} Switch Factory
{% endblock %}
{% block body %}
<style>
@import url('https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Ubuntu:wght@300&display=swap');

        .about-area {
            padding-top: 2%;
        }
        .form{
            background-color:#d5bdaf;
        }
        .about-img {
            padding-left:0px;
            width:500px;
            height:500px;
            position: relative;
            text-align: left;
        }

        .about-img:before {
            position: relative;
            content: '';
            right: -30px;
            top: 30px;
            width: 100%;
            height: 100%;
        }

        .about-img img {
            width: 400%;
            
        }

        .about-text {
            padding-top: 20%;
        }

        .about-text h2 {
            color: black;
            font-family: 'Poppins', sans-serif;
            font-size: 50px;
        }

        .about-text p {
            font-family: 'Ubuntu', sans-serif;
            font-size: 18px;
            color: black;
        }

        .about-text a {
            background: #6666FF;
            color: #33FF33;
            padding: 15px 15px;
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            border-radius: 80px;
        }
        .about-text a:hover{
            color:#000000;
            background-color:#FF0000;
        }

        body {
            background-color: #EDEDED !important;
        }
        
        /* Media queries */
         @media (max-width: 1400px) {
            
            .about-area {
                padding-top: 10%;
            }
            
            .about-img img {
                width: 100%;
                margin-left:-50px;
            }
        }
        @media (max-width: 1200px) {
            .about-area {
                padding-top: 10%;
            }
            
            .about-img img {
                width: 100%;
                margin-left:-110px; 
            }
        }
        @media (max-width: 993px) {
            .about-area {
                padding-top: 10%;
            }
            .about-img img {
                width: 100%;
            }
        }
        @media (max-width: 768px) {
            .about-area {
                padding-top: 10%;
            }
          
            .about-img img {
                width: 100%;
          
            }
        }
        @media (max-width: 576px) {
            .about-text h2 {
                font-size: 30px;
            }
            .about-text p {
                font-size: 16px;
             
            }
        }
</style>

     <div class="about-area">
     <div class="form">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="about-img">
						<img style="max-width:100%" src="https://scontent.fsgn2-7.fna.fbcdn.net/v/t1.15752-9/331107408_715676833533541_3885101367435613190_n.png?_nc_cat=108&ccb=1-7&_nc_sid=ae9488&_nc_ohc=iXBtuEUxpSQAX9A9XUr&tn=nrSirqe_iHDbg5jH&_nc_ht=scontent.fsgn2-7.fna&oh=03_AdRncWP0Yc84PpNXKkqh9KmupRR_nVwi9LSsZTmeivwadQ&oe=6412BBFB"></img>
                    </div>
                </div>
                <div class="col-lg-6 col-lg-offset-1">
