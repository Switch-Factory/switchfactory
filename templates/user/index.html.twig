{% extends 'admin.html.twig' %}
{% block title %}User Manager
{% endblock %}

{% block body %}
	<div classname="page-heading pb-2 mt-4 mb-2 ">
		<h3>Manager</h3>
		<a href="{{path('product_create')}}">
			<button type="button" class="btn btn-outline-primary">Insert</button>
		</a>
	</div>
	<div class="page-content">
		<div class="btn-group" role="group" aria-label="Basic outlined example"></div>
		<div class="card">
			<div class="container mb-3">
				<div class="table-responsive text-nowrap">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>Name</th>
								<th>Role</th>
								<th>Email</th>
								<th>Birthday</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody class="table-border-bottom-0">
							{% for u in user %}
								<tr>

									<td>{{ u.name}}</td>
									<td>{{ u.roles[0] }}</td>
									<td>{{ u.email }}</td>
									<td>{{ u.birthday|date('m/d/y') }}</td>
									<td>
										<a href="{{path('user_edit',{'id':u.id})}}">
											<i class="fas fa-edit"></i>
										</a>
										<a href="{{path('user_delete',{'id':u.id})}}">
											<i class="fa fa-trash" aria-hidden="true"></i>
										</a>
									</td>
								</tr>
							{% endfor %}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
